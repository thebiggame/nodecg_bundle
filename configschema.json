{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "event_num": {
      "type": "integer"
    },
    "stage": {
      "type": "object",
      "properties": {
        "slideshow_interval": {
          "type": "integer"
        },
        "schedule_scroll_interval": {
          "type": "integer"
        }
      },
      "required": [
        "slideshow_interval",
        "schedule_scroll_interval"
      ]
    },
    "music": {
      "type": "object",
      "properties": {
        "updateInterval": {
          "type": "integer"
        },
        "lastfm": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "apiKey": {
              "type": "string"
            },
            "source": {
              "type": "string"
            }
          }
        },
        "party": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "url": {
              "type": "string"
            },
            "id": {
              "type": "string"
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "snmp": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string"
            },
            "community": {
              "type": "string"
            },
            "interval": {
              "type": "integer"
            },
            "oids": {
              "type": "object",
              "properties": {
                "down": {
                  "type": "string"
                },
                "up": {
                  "type": "string"
                }
              },
              "required": [
                "down",
                "up"
              ]
            }
          },
          "required": [
            "enabled",
            "host",
            "community",
            "interval",
            "oids"
          ]
        },
        "bwHighThreshold": {
          "type": "integer"
        }
      },
      "required": [
        "snmp",
        "bwHighThreshold"
      ]
    },
    "schedule": {
      "type": "object",
      "properties": {
        "icalAddress": {
          "type": "string"
        },
        "debugExtraEvents": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "event_num",
    "stage",
    "music",
    "network",
    "schedule"
  ]
}