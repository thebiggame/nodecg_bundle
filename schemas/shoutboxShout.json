{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "avatar_url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "steamID",
        "avatar_url"
      ]
    }
  },
  "required": [
    "id",
    "timestamp",
    "message",
    "user"
  ]
}